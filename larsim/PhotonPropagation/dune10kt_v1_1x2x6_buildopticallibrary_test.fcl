#services.PhotonVisibilityService.NZ: 30

physics.producers.generator.FirstVoxel:1010
physics.producers.generator.LastVoxel: 1011

#physics.producers.generator.N: 500

physics.analyzers.pmtresponse.Verbosity: 3
physics.producers.generator.N: 10


